---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import shuffleArray from "@utils/shuffleArray";
import Card from "@components/Card";
import Socials from "@components/Socials.astro";
import getSortedPosts from "@utils/getSortedPosts";
import { SOCIALS } from "@config";

export interface Props {
  activeNav?: "posts" | "tags" | "about" | "search";
}

const { activeNav } = Astro.props;

function getRandomPosition() {
  const top = `${Math.random() * 100}%`;
  const left = `${Math.random() * 100}%`;
  return { top, left };
}
const posts = await getCollection("blog");

const featuredPosts = shuffleArray(posts.filter(post => post.data.featured));
const recentPosts = shuffleArray(posts.filter(post => !post.data.featured));

/* const socialCount = SOCIALS.filter(social => social.active).length;
 */
---

<Layout>
  <Header />
  <main id="main-content">
    <section id="hero">
      <p>Vita Tu≈°ek</p>
      <div class="nav-container">
        <div class="top-nav-wrap">
          <!-- <a href="/vita_tusek.github.io/" class="logo whitespace-nowrap">
            {
              LOGO_IMAGE.enable ? (
                <img
                  src={`/assets/${LOGO_IMAGE.svg ? "logo.svg" : "logo.png"}`}
                  alt={SITE.title}
                  width={LOGO_IMAGE.width}
                  height={LOGO_IMAGE.height}
                />
              ) : (
                SITE.title
              )
            }
          </a> -->
          <nav id="nav-menu">
            <button
              class="hamburger-menu focus-outline"
              aria-label="Open Menu"
              aria-expanded="false"
              aria-controls="menu-items"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="menu-icon"
              >
                <line x1="7" y1="12" x2="21" y2="12" class="line"></line>
                <line x1="3" y1="6" x2="21" y2="6" class="line"></line>
                <line x1="12" y1="18" x2="21" y2="18" class="line"></line>
                <line x1="18" y1="6" x2="6" y2="18" class="close"></line>
                <line x1="6" y1="6" x2="18" y2="18" class="close"></line>
              </svg>
            </button>
            <ul id="menu-items" class="display-none">
              <li>
                <a
                  href="/vita_tusek.github.io/posts/"
                  class={activeNav === "posts" ? "active" : ""}
                >
                  Posts
                </a>
              </li>
              <li>
                <a
                  href="/vita_tusek.github.io/tags/"
                  class={activeNav === "tags" ? "active" : ""}
                >
                  Tags
                </a>
              </li>
              <li>
                <a
                  href="/vita_tusek.github.io/about/"
                  class={activeNav === "about" ? "active" : ""}
                >
                  About
                </a>
              </li>
              <li>
                <LinkButton
                  href="/vita_tusek.github.io/search/"
                  className={`focus-outline p-3 sm:p-1 ${
                    activeNav === "search" ? "active" : ""
                  } `}
                  ariaLabel="search"
                  title="Search"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="scale-125 sm:scale-100"
                    ><path
                      d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
                    ></path>
                  </svg>
                  <span class="sr-only">Search</span>
                </LinkButton>
              </li>
            </ul>
          </nav>

          <style>
            #featured,
            #recent-posts {
              position: absolute;
              width: 100%;
              height: 100vh; /* Full viewport height */
              overflow: hidden;
            }
            #featured ul,
            #recent-posts ul {
              position: absolute;
              width: 100%;
              height: 100%;
              margin: 0;
              padding: 0;
            }
            #featured li,
            #recent-posts li {
              position: absolute;
              list-style: none;
              transform: translate(
                -50%,
                -50%
              ); /* Center elements around their random position */
            }
          </style>

          {
            recentPosts.length > 0 && (
              <section id="recent-posts">
                <ul>
                  {recentPosts.map(({ data, slug }, index) => {
                    const { top, left } = getRandomPosition();
                    return (
                      index < 4 && (
                        <li id={slug} style={{ top, left }}>
                          <Card
                            href={`/vita_tusek.github.io/posts/${slug}/`}
                            frontmatter={data}
                          />
                        </li>
                      )
                    );
                  })}
                </ul>
              </section>
            )
          }

          <div class="all-posts-btn-wrapper">
            <LinkButton href="/vita_tusek.github.io/posts/">
              All works
              <svg xmlns="http://www.w3.org/2000/svg"
                ><path
                  d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
                ></path>
              </svg>
            </LinkButton>
          </div>
        </div>

        <Footer />
      </div>

      <style>
        /* ===== Hero Section ===== */
        #hero {
          @apply pb-6 pt-8;
          align-text: center;
        }
        #hero h1 {
          @apply my-4 inline-block text-3xl font-bold sm:my-8 sm:text-5xl;
        }
        #hero .rss-link {
          @apply mb-6;
        }
        #hero .rss-icon {
          @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
        }
        #hero p {
          @apply my-2;
          align-text: center;
        }
        .social-wrapper {
          @apply mt-4 flex flex-col sm:flex-row sm:items-center;
        }
        .social-links {
          @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
        }

        /* ===== Featured & Recent Posts Sections ===== */
        #featured,
        #recent-posts {
          @apply pb-6 pt-12;
        }
        #featured h2,
        #recent-posts h2 {
          @apply text-2xl font-semibold tracking-wide;
        }
        .all-posts-btn-wrapper {
          @apply my-8 text-center;
          z-index: 1000;
        }
        .hamburger-menu {
          @apply self-end p-2 sm:hidden;
        }
        .hamburger-menu svg {
          @apply h-6 w-6 scale-125 fill-skin-base;
        }

        nav {
          @apply w-full flex-col items-center sm:ml-2 sm:flex-row sm:justify-end sm:space-x-4 sm:py-0;
        }
        nav ul {
          @apply mt-4 grid w-44 grid-cols-2 grid-rows-4 gap-x-2 gap-y-2 sm:ml-0 sm:mt-0 sm:w-auto sm:gap-x-5 sm:gap-y-0;
        }
        nav ul li {
          @apply col-span-2 flex items-center justify-center;
        }
        nav ul li a {
          @apply w-full px-4 py-3 text-center font-medium hover:text-skin-accent sm:my-0 sm:px-2 sm:py-1;
        }
        nav ul li:nth-last-child(2) a {
          @apply w-auto;
        }
        nav ul li:nth-last-child(1),
        nav ul li:nth-last-child(2) {
          @apply col-span-1;
        }
        nav a.active {
          @apply underline decoration-wavy decoration-2 underline-offset-4;
        }
        nav a.active svg {
          @apply fill-skin-accent;
        }
      </style>
    </section>
  </main></Layout
>
